{
  "name": "front-desk-app",
  "version": "2.0.1",
  "main": "main.js",
  "scripts": {
    "type-check": "tsc --noEmit",
    "server": "node src/server/server.js",
    "dev": "cd apps/web && npm run dev",
    "build": "cd apps/web && npm run build",
    "lint": "eslint .",
    "test": "NODE_ENV=test jest",
    "test:e2e": "echo 'E2E UI tests removed; run npm run test for unit tests'",
    "test:watch": "NODE_ENV=test jest --watch",
    "prod": "npm run prod:init && npm run install:web && npm run prod:start",
    "prod:init": "node src/server/scripts/initProdMode.js",
    "install:web": "cd apps/web && npm install",
    "prod:start": "concurrently \"npm run server\" \"npm run dev\" --names \"backend,frontend\" --prefix-colors \"blue,green\"",
    "server:prod": "npm run server",
    "preview": "cd apps/web && npm run preview",
    "electron:build": "npm run build && electron-builder",
    "start": "electron .",
    "pack": "npx electron-builder --dir",
    "dist": "npm run build && npm prune --omit=dev && npx electron-builder --win --x64",
    "dist:ci": "npm prune --omit=dev && npx electron-builder --win --x64",
    "reset:local": "node src/server/scripts/resetLocalState.js",
    "reset:local-keep-db": "node src/server/scripts/resetLocalState.js --keep-db",
    "release": "semantic-release"
  },
  "keywords": [],
  "author": "Matt Barbour",
  "license": "ISC",
  "description": "Front Desk App - Guest Self Check-in System",
  "build": {
    "appId": "com.rec-center-checkin.app",
    "productName": "Front Desk App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "!dist/win-unpacked{,/**}",
      "src/server/**/*",
      "package.json",
      "main.js"
    ],
    "asar": true,
    "asarUnpack": [
      "dist/**/*",
      "src/server/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "requestedExecutionLevel": "asInvoker"
    },
    "extraResources": [
      {
        "from": "dist",
        "to": "dist",
        "filter": [
          "**/*",
          "!win-unpacked{,/**}"
        ]
      },
      {
        "from": "src/server",
        "to": "src/server"
      },
      {
        "from": "node_modules",
        "to": "node_modules",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": ".env",
        "to": "."
      }
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "accepts": "^1.3.8",
    "array-flatten": "^1.1.1",
    "better-sqlite3": "^12.5.0",
    "body-parser": "^1.20.2",
    "bytes": "^3.1.2",
    "content-disposition": "^0.5.4",
    "content-type": "^1.0.5",
    "cookie": "^0.5.0",
    "cookie-signature": "^1.0.6",
    "cors": "^2.8.5",
    "debug": "^2.6.9",
    "depd": "^2.0.0",
    "destroy": "^1.2.0",
    "dotenv": "^16.4.7",
    "ee-first": "^1.1.1",
    "encodeurl": "^1.0.2",
    "escape-html": "^1.0.3",
    "etag": "^1.8.1",
    "express": "^4.21.2",
    "finalhandler": "^1.2.0",
    "forwarded": "^0.2.0",
    "fresh": "^0.5.2",
    "http-errors": "^2.0.0",
    "iconv-lite": "^0.4.24",
    "inherits": "^2.0.4",
    "ipaddr.js": "^1.9.1",
    "jest-environment-jsdom": "^29.7.0",
    "lucide-svelte": "^0.344.0",
    "media-typer": "^0.3.0",
    "memorystream": "^0.3.1",
    "merge-descriptors": "^1.0.1",
    "methods": "^1.1.2",
    "mime": "^1.6.0",
    "mime-db": "^1.52.0",
    "mime-types": "^2.1.35",
    "ms": "^2.1.2",
    "negotiator": "^0.6.3",
    "on-finished": "^2.4.1",
    "parseurl": "^1.3.3",
    "path-to-regexp": "^6.2.1",
    "proxy-addr": "^2.0.7",
    "qs": "^6.11.0",
    "range-parser": "^1.2.1",
    "raw-body": "^2.5.2",
    "safe-buffer": "^5.2.1",
    "send": "^0.18.0",
    "serve-static": "^1.15.0",
    "setprototypeof": "^1.2.0",
    "square": "^40.0.0",
    "statuses": "^2.0.1",
    "svelte": "^4.2.0",
    "type-is": "^1.6.18",
    "unpipe": "^1.0.0",
    "utils-merge": "^1.0.1",
    "vary": "^1.1.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@playwright/test": "^1.50.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.2",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@testing-library/svelte": "^4.0.0",
    "@types/jest": "^29.5.14",
    "autoprefixer": "^10.4.18",
    "concurrently": "^9.2.1",
    "electron": "30.0.0",
    "electron-builder": "^24.13.0",
    "eslint": "^9.9.1",
    "eslint-plugin-svelte": "^2.36.0",
    "globals": "^15.9.0",
    "jest": "^29.7.0",
    "node-fetch": "^2.7.0",
    "postcss": "^8.4.35",
    "semantic-release": "^24.2.3",
    "supertest": "^7.0.0",
    "svelte-check": "^3.8.0",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.14"
  }
}
